<p id="notice"><%= notice %></p>
<%console%>
<h1>Listing <%= @albums.count %> Albums</h1>

<table>
  <thead>
    <tr>
      <th>Album Name</th>
      <th>Artist Name</th>
      <th>Reviews</th>
      <th>Average Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album %></td>
        <td><%= link_to album.artist.name, album.artist %></td>
        <td><%= album.reviews.count %></td>
        <td><%= album.average_review %></td>
        <td><% link_to 'Show', album %></td>
        <td><% link_to 'Edit', edit_album_path(album) %></td>
        <td><% link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>
