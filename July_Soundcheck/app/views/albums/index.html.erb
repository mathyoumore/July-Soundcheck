<p id="notice"><%= notice %></p>

<h1>Listing <%= @albums.count %> Albums</h1>
<%= will_paginate @albums, previous_label: h("<"),next_label: h(">") %><br>

<table>
  <thead>
    <tr>
      <th>Album Name</th>
      <th>Artist Name</th>
      <th>Reviews</th>
      <th>Average Review</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.title, album %></td>
        <td><%= link_to album.artist.name, album.artist %></td>
        <td><%= album.reviews.count %></td>
        <td><%= album.average_review %></td>
      </tr>
    <% end %>
  </tbody>
</table>
